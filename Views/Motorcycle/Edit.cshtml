@model Store.ViewModels.MotorcycleFormVM

@{
    ViewData["Title"] = "Edit Motorcycle";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Motorcycle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Brand" class="form-label">Brand</label>
                        <input asp-for="Brand" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Model" class="form-label">Model Name</label>
                        <input asp-for="Model" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ShowroomIds" class="form-label">Select Showroom</label>
                    <select asp-for="ShowroomIds" asp-items="Model.Showrooms" class="form-select" id="showroomSelect" style="width: 100%;">
                    </select>
                    <span asp-validation-for="ShowroomIds" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="StockQuantity" class="form-label">Quantity</label>
                        <input asp-for="StockQuantity" type="number" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Motorcycle Image</label>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-2">
                            <img src="~/images/motorcycles/@Model.ImageUrl" style="width: 150px; border-radius: 5px; border: 1px solid #ddd" />
                            <span class="text-muted ms-2 small">Current Image</span>
                        </div>
                    }

                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <small class="text-muted">Upload new image only if you want to change the current one.</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning w-100">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#showroomSelect').removeAttr('multiple');

            $('#showroomSelect').select2({
                placeholder: "Select a showroom",
                allowClear: false,
                theme: "classic"
            });
        });
    </script>
}