@model Store.ViewModels.ShoppingCartVM

<form method="post" asp-action="Summary">
    <div class="container mt-4">
        <div class="card shadow border-0">
            <div class="card-header bg-secondary text-white py-3">
                <h5><i class="bi bi-check2-square"></i> Order Summary</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary">Customer Details</h5>
                        <div class="mb-3">
                            <label>Name</label>
                            <input asp-for="InquiryHeader.FullName" class="form-control" />
                            <span asp-validation-for="InquiryHeader.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Phone</label>
                            <input asp-for="InquiryHeader.PhoneNumber" class="form-control" />
                            <span asp-validation-for="InquiryHeader.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input asp-for="InquiryHeader.Email" class="form-control" />
                            <span asp-validation-for="InquiryHeader.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary">Items</h5>
                        <ul class="list-group">
                            @foreach (var item in Model.CartList)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@item.Motorcycle.Brand @item.Motorcycle.Model (x @item.Count)</span>
                                    <span>@((item.Motorcycle.Price * item.Count).ToString("C0"))</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary w-100">Confirm Inquiry</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}