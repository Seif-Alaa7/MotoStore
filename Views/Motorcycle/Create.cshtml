@model Store.ViewModels.MotorcycleFormVM

@{
    ViewData["Title"] = "Add Motorcycle";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Add New Motorcycle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data" method="post">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Brand" class="form-label">Brand</label>
                        <input asp-for="Brand" class="form-control" placeholder="Ex: Yamaha" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Model" class="form-label">Model Name</label>
                        <input asp-for="Model" class="form-control" placeholder="Ex: R1M" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ShowroomIds" class="form-label">Select Showrooms</label>
                    <select asp-for="ShowroomIds" asp-items="Model.Showrooms" class="form-select" id="showroomSelect" multiple style="width: 100%;">
                    </select>
                    <span asp-validation-for="ShowroomIds" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="StockQuantity" class="form-label">Quantity</label>
                        <input asp-for="StockQuantity" type="number" class="form-control" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Main Image (Cover)</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3 p-3 bg-light border rounded">
                    <label class="form-label text-primary fw-bold">Gallery Images (Optional)</label>
                    <input type="file" name="galleryFiles" class="form-control" multiple accept="image/*" />
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-info-circle"></i> You can select multiple images by holding <b>Ctrl</b> key.
                    </small>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2 fw-bold">Add Motorcycle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#showroomSelect').select2({
                placeholder: "Search and select showrooms...",
                allowClear: true,
                theme: "classic"
            });
        });
    </script>
}