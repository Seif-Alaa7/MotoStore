<!DOCTYPE html>
<html lang="en">
<head>
    @using Store.Utility
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotoMarket</title>
    <link rel="icon" type="image/png" href="~/images/Motomarket.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; 
        }

            body > .container {
                flex: 1;
            }

        .footer {
            position: relative !important;
            margin-top: auto;
            background-color: #212529;
            color: white;
            padding: 20px 0;
            width: 100%;
            white-space: normal !important;
            line-height: 1.5 !important; 
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> MotoMarket
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3"></i> My Cart
                            </a>
                        </li>

                        @if (User.IsInRole(StaticDetails.Role_Admin) || User.IsInRole(StaticDetails.Role_Vendor))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill"></i> Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Showroom" asp-action="Index">Showrooms</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Motorcycle" asp-action="Index">Motorcycles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Inquiry" asp-action="Index">
                                            <i class="bi bi-inbox"></i> Vendor Inbox
                                        </a>
                                    </li>

                                    @if (User.IsInRole(Store.Utility.StaticDetails.Role_Admin))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="Index">Manage Users</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted bg-dark">
        <div class="container">
            <div class="row pt-3">

                <div class="col-md-4 mb-3 text-white">
                    <h5 class="text-warning fw-bold"><i class="bi bi-speedometer2"></i> MotoMarket</h5>
                    <p class="small text-light">
                        The premium destination for motorcycle enthusiasts in Egypt. Quality and trust in every ride.
                    </p>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 class="text-white fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none text-light" asp-controller="Home" asp-action="Index">Home Page</a></li>
                        <li><a class="text-decoration-none text-light" asp-controller="Cart" asp-action="Index">My Cart</a></li>
                        <li><a class="text-decoration-none text-light" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-3 text-white">
                    <h5 class="text-white fw-bold">Contact</h5>
                    <ul class="list-unstyled small text-light">
                        <li><i class="bi bi-geo-alt-fill text-warning"></i> Cairo, Egypt</li>
                        <li><i class="bi bi-whatsapp text-warning"></i> +20 100 200 3000</li>
                    </ul>
                </div>
            </div>

            <div class="text-center py-3 text-light border-top border-secondary mt-3">
                &copy; 2026 - MotoMarket - All Rights Reserved
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
