@model IEnumerable<Store.Models.Motorcycle>

@{
    ViewData["Title"] = "Manage Motorcycles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold"><i class="bi bi-speedometer2"></i> Motorcycles Inventory</h2>
            <p class="text-muted">Manage your stock and product details.</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg"></i> Add New Motorcycle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center py-5 shadow-sm border-0">
            <i class="bi bi-exclamation-circle display-4 text-warning mb-3"></i>
            <h4>No motorcycles available yet.</h4>
            <p>Start adding your inventory now!</p>
            <a asp-action="Create" class="btn btn-primary mt-2">Add First Motorcycle</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var bike in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition-card">
                        <div style="height: 200px; overflow: hidden; background-color: #f8f9fa;" class="d-flex align-items-center justify-content-center position-relative">
                            @if (!string.IsNullOrEmpty(bike.ImageUrl))
                            {
                                <img src="~/images/motorcycles/@bike.ImageUrl" class="card-img-top" style="object-fit: contain; max-height: 100%; width: 100%;" alt="@bike.Model">
                            }
                            else
                            {
                                <span class="text-muted"><i class="bi bi-image fs-1"></i></span>
                            }

                            <span class="position-absolute top-0 end-0 bg-primary text-white px-3 py-1 m-2 rounded-pill shadow-sm small fw-bold">
                                @bike.Price.ToString("C0")
                            </span>
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h5 class="card-title fw-bold text-dark text-truncate" title="@bike.Brand @bike.Model">@bike.Brand @bike.Model</h5>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted"><i class="bi bi-shop"></i> @bike.Showroom?.Name</small>
                            </div>

                            <p class="card-text text-muted text-truncate small">@bike.Description</p>

                            <div class="d-flex justify-content-between align-items-center mt-3 border-top pt-2">
                                <div>
                                    @if (bike.StockQuantity > 0)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1">
                                            <i class="bi bi-check-circle-fill me-1"></i> In Stock: @bike.StockQuantity
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 py-1">
                                            <i class="bi bi-x-circle-fill me-1"></i> Out of Stock
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-flex gap-2">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@bike.Id" class="btn btn-outline-info btn-sm flex-fill">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <a asp-action="Edit" asp-route-id="@bike.Id" class="btn btn-outline-warning btn-sm flex-fill">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a onclick="Delete('/Motorcycle/Delete/@bike.Id')" class="btn btn-outline-danger btn-sm flex-fill" style="cursor:pointer">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .transition-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .transition-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function Delete(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                Swal.fire(
                                    'Deleted!',
                                    data.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    data.message,
                                    'error'
                                );
                            }
                        },
                        error: function (xhr, status, error) {
                            Swal.fire(
                                'System Error!',
                                'Something went wrong. check console for details.',
                                'error'
                            );
                        }
                    })
                }
            })
        }
    </script>
}