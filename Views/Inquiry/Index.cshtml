@model IEnumerable<Store.Models.InquiryHeader>

@{
    ViewData["Title"] = "Inquiry Inbox";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-envelope-paper"></i> Inbox (Customer Inquiries)</h4>
            <span class="badge bg-light text-primary">Total: @Model.Count()</span>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th>ID</th>
                                <th>Customer Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Showroom</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">#@item.Id</td>
                                    <td class="fw-bold">@item.FullName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (item.Showroom != null)
                                        {
                                            @item.Showroom.Name
                                        }
                                    </td>
                                    <td class="text-center">@item.InquiryDate.ToShortDateString()</td>

                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-controller="Inquiry" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>

                                            <a onclick="DeleteInquiry('/Inquiry/DeleteInquiry/@item.Id')" class="btn btn-sm btn-outline-danger" style="cursor:pointer">
                                                <i class="bi bi-trash-fill"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted opacity-50"></i>
                    <h5 class="mt-3 text-muted">No inquiries found yet!</h5>
                    <p class="text-secondary small">Wait for customers to send requests to your showroom.</p>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function DeleteInquiry(url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                Swal.fire(
                                    'Deleted!',
                                    data.message,
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    data.message,
                                    'error'
                                );
                            }
                        },
                        error: function (xhr, status, error) {
                             Swal.fire(
                                'System Error!',
                                'Something went wrong.',
                                'error'
                            );
                        }
                    })
                }
            })
        }
    </script>
}