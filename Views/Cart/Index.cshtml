@model Store.ViewModels.ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<form method="post">
    <br />
    <div class="container">
        <div class="card shadow border-0 mb-4">
            <div class="card-header bg-primary bg-gradient text-light py-3">
                <div class="row px-2 align-items-center">
                    <div class="col-6">
                        <h5 class="mb-0 text-white">
                            <i class="bi bi-cart3"></i> Shopping Cart
                        </h5>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @if (Model.CartList.Count() > 0)
                {
                    <div class="row text-muted fw-bold border-bottom pb-2 d-none d-md-flex">
                        <div class="col-md-5">Product Details</div>
                        <div class="col-md-2 text-center">Price</div>
                        <div class="col-md-3 text-center">Quantity</div>
                        <div class="col-md-2 text-center">Total</div>
                    </div>

                    @foreach (var item in Model.CartList)
                    {
                        <div class="row border-bottom py-3 align-items-center">
                            <div class="col-12 col-md-5 d-flex align-items-center">
                                <div class="me-3">
                                    @if (item.Motorcycle.ImageUrl != null)
                                    {
                                        <img src="~/images/motorcycles/@item.Motorcycle.ImageUrl" class="rounded" style="width: 80px; height: 80px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="https://via.placeholder.com/80" class="rounded" style="width: 80px; height: 80px;" />
                                    }
                                </div>
                                <div>
                                    <h6 class="fw-bold text-dark mb-1">@item.Motorcycle.Brand @item.Motorcycle.Model</h6>
                                    <small class="text-muted d-block text-truncate" style="max-width: 200px;">@Html.Raw(item.Motorcycle.Description)</small>
                                </div>
                            </div>

                            <div class="col-6 col-md-2 text-center mt-2 mt-md-0">
                                <span class="text-muted d-md-none">Price: </span>
                                <h6 class="mb-0">@item.Motorcycle.Price.ToString("c")</h6>
                            </div>

                            <div class="col-6 col-md-3 text-center mt-2 mt-md-0">
                                <div class="input-group input-group-sm w-75 mx-auto">
                                    <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-dash-lg"></i>
                                    </a>
                                    <input type="text" value="@item.Count" class="form-control text-center bg-white" disabled />
                                    <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="col-12 col-md-2 text-center mt-3 mt-md-0 d-flex flex-column align-items-center justify-content-center">
                                <h6 class="fw-bold text-success mb-2">@((item.Motorcycle.Price * item.Count).ToString("c"))</h6>
                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger btn-sm shadow-sm">
                                    <i class="bi bi-trash3-fill"></i> Remove
                                </a>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12 col-md-5 offset-md-7">
                            <div class="bg-light p-3 rounded border">
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="h5 mb-0">Total (EGP):</span>
                                    <span class="h5 text-primary fw-bold mb-0">@Model.OrderTotal.ToString("c")</span>
                                </div>
                                <a asp-action="Summary" class="btn btn-success w-100 py-2 fw-bold shadow-sm">
                                    Proceed to Summary <i class="bi bi-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-cart-x display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">Your cart is empty</h4>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Start Shopping</a>
                    </div>
                }
            </div>
        </div>
    </div>
</form>